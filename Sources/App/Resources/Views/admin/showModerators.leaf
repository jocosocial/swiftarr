#extend("trunk"):
    #export("body"):
    	<div class="container-md ms-0 my-1">
			<div class="row">
    			<div class="col">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
							<li class="breadcrumb-item active" aria-current="page">Show Moderators</li>
						</ol>
					</nav>
				</div>
			</div>
			<div class="row my-2">
				<div class="col">
					<b>Search for Users to Promote To Moderator</b>
				</div>
			</div>
			<div class="row my-2">
				<form class="d-flex my-1">
					<input class="form-control" type="search" name="search" placeholder="Search Users" value="#(userSearch)" aria-label="Search" autocapitalize="off" required>
					<button class="btn btn-primary ms-2" type="submit">Search</button>
				</form>
			</div>
			#if(searchResults):
				<div class="row my-2">
					<div class="col">
						<b>Search Results:</b>
					</div>
				</div>
				<ul class="list-group">
					#for(user in searchResults):
						<li class="list-group-item list-group-item-action" data-postid="#(ann.id)">		
							<div class="row justify-content-between">
								<div class="col">
									#avatar(user) #userByline(user)
								</div>
								<div class="col col-auto">
									<button type="button" class="btn btn-sm btn-primary" autocomplete="off" data-action="reload" 
											data-actionpath="/admin/user/#(user.userID)/makemoderator"
											data-errordiv="#(user.userID)_errorDisplay">
										Promote
										<span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
										<span class="visually-hidden">Loading...</span>
									</button>
								</div>
							</div>
							<div class="text-end text-danger d-none" id="#(user.userID)_errorDisplay">
								Could not promote to moderator: <span class="errortext"></span>
							</div>
						</li>
					#endfor
				</ul>
			#endif
			<div class="row my-2">
				<div class="col">
					<b>Current Moderators:</b>
				</div>
			</div>
			<ul class="list-group">
				#if(count(currentMods) == 0):
					<li class="list-group-item bg-transparent">
						<span class="text-center"><h6>No users have been promoted to moderator yet.</h6>
					</li>
				#else:
					#for(mod in currentMods):
						<li class="list-group-item list-group-item-action" data-postid="#(ann.id)">		
							<div class="row justify-content-between">
								<div class="col">
									#avatar(mod) #userByline(mod)
								</div>
								<div class="col col-auto">
									<button type="button" class="btn btn-sm btn-primary" autocomplete="off" data-action="reload" 
											data-actionpath="/admin/user/#(mod.userID)/demotemoderator"
											data-errordiv="#(mod.userID)_modErrorDisplay">
										Demote
										<span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
										<span class="visually-hidden">Loading...</span>
									</button>
								</div>
							</div>
							<div class="row">
								<div class="col text-end text-danger d-none" id="#(mod.userID)_modErrorDisplay">
									Could not demote to verified: <span class="errortext"></span>
								</div>
							</div>
						</li>
					#endfor
				#endif
			</ul>
		</div>
    #endexport
#endextend
